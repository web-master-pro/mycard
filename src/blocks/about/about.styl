.about
    &__in
        container(1180px)
        padding 20px 0px 60px
        +above(1000px)
            padding 20px 20px 240px

    &__logo
        display block
        retinaSprite($icon_logo_small_group)
        margin 0 auto 12px

    &__about
        color #3b3b3b
        font(Medium)
        font-size 18px
        line-height 1.2
        text-align center
        text-transform uppercase
        margin 0 0 50px
        strong
            font(Extra)

    &__title
        color #44afdd
        font(Bold)
        font-size 28px
        line-height 1
        text-transform uppercase
        text-align center
        margin 0 0 10px


.a-slider
    display block
    width 280px
    position relative
    margin 0 auto
    +above(430px)
        width 300px
    +above(650px)
        width 445px
    +above(1000px)
        width 770px
    +above(1180px)
        width 900px

    &__slide
        display block
        min-height 395px
        position relative
        &--1
            &::after
                content ""
                retinaSprite($icon_artwork_1_group)
                position absolute
                bottom 20px
                left 50%
                margin-left -100px
        &--2
            min-height 395px
            padding-top 65px
            text-align center
        &--3
            padding-top 40px

    .owl-prev
        display none
        width 54px
        position absolute
        top 50%
        margin-top -37px
        left -60px
        padding-top 55px
        color #646567
        font()
        font-size 16px
        line-height 1
        cursor pointer
        transition transform .3s ease
        &::before
            content ""
            retinaSprite($icon_prev_group)
            position absolute
            top 0
            left 0
        &:hover
            transform translateX(-4px)
        +above(992px)
            display block
        +below(991px)
            display none !important
    .owl-next
        display none
        width 54px
        position absolute
        top 50%
        margin-top -22px
        right -60px
        padding-top 55px
        color #646567
        font()
        font-size 16px
        line-height 1
        cursor pointer
        transition transform .3s ease
        &::before
            content ""
            retinaSprite($icon_next_group)
            position absolute
            top 0
            left 0
        &:hover
            transform translateX(4px)
        +above(992px)
            display block
        +below(991px)
            display none !important
    .owl-dots
        display block
        position absolute
        bottom -30px
        left 0
        right 0
        text-align center
        font-size 0
        +above(992px)
            display none !important

    .owl-dot
        retinaSprite($icon_owl_dot_group)
        display inline-block
        vertical-align middle
        margin 0 7px 15px
        cursor pointer
        &.active
        &:hover
            retinaSprite($icon_owl_dot_active_group)

    &__text
        color #3b3b3b
        font()
        font-size 16px
        line-height 1.2
        text-align center
        margin 0
        strong
            font(Medium)
            text-transform uppercase

    &__box
        display inline-block
        vertical-align top
        max-width 340px
        min-height 300px
        background-color #fff
        padding 42px 8px 20px
        margin 0 10px 30px
        position relative
        +above(1180px)
            margin 0 20px 30px
            max-width 390px

    &__box-title
        color #3b3b3b
        font(Bold)
        font-size 28px
        line-height 1
        text-align center
        text-transform uppercase
        padding 0 0 30px
        border-bottom 3px solid #e5e5e5
        margin 0 0 40px

    &__box-txt
        color #3b3b3b
        font()
        font-size 16px
        line-height 1.2
        text-align center
        padding 0 10px
        margin 0

    &__numbers-title
        color #3b3b3b
        font(Bold)
        font-size 24px
        line-height 1
        text-align center
        text-transform uppercase
        margin 0 0 65px

    &__numbers
        padding 0
        text-align center

    &__number
        display inline-block
        vertical-align top
        color #3b3b3b
        font()
        font-size 18px
        line-height 1
        text-transform uppercase
        text-align center
        padding-top 115px
        position relative
        margin 0 5px 30px
        span
            display none
        +above(1180px)
            margin 0 20px 40px

        &--1
            &::before
                content ""
                retinaSprite($icon_numbers_7_group)
                position absolute
                top 0
                left 50%
                margin-left -21px
        &--2
            &::before
                content ""
                retinaSprite($icon_numbers_570_group)
                position absolute
                top 0
                left 50%
                margin-left -61px
        &--3
            &::before
                content ""
                retinaSprite($icon_numbers_18_group)
                position absolute
                top 0
                left 50%
                margin-left -40px
        &--4
            &::before
                content ""
                retinaSprite($icon_numbers_12_group)
                position absolute
                top 0
                left 50%
                margin-left -41px

