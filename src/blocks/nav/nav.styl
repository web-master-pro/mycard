.nav
    display block
    width 100%
    height 57px
    background-color #fff
    &--fixed
        position fixed
        top 0
        left 0
        right 0
        z-index 700

    &__menu
        list-style none
        padding 55px 0 5px
        margin 0 auto
        display none
        background-color #fff
        width 200px
        text-align center
        position relative
        z-index 710
        +above(992px)
            width 100%
            max-width 1000px
            display flex !important
            flex-flow row nowrap
            justify-content space-around
            font-size 0
            padding 20px 10px 10px

    &__item
        display flex
        flex-flow row nowrap
        align-items center
        color #1b1a1a
        font()
        font-size 14px
        text-transform uppercase
        height 20px
        margin 15px 0
        width 100%
        +above(992px)
            margin 0
            &--about
                width 120px
            &--portfolio
                width 110px
            &--team
                width 150px
            &--services
                width 70px
            &--clients
                width 80px
            &--feedbacks
                width 75px
            &--contacts
                width 95px

    &__link
        flex 1 1 auto
        display inline-block
        color #1b1a1a
        font-size 14px
        line-height 1
        text-decoration none
        text-align center
        transition .3s ease
        &:hover
        &.active
            color #44afdd
            text-decoration none
            font(Medium)
            font-size 16px
