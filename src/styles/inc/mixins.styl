container(w = 1000px)
    display block
    max-width w
    margin-left auto
    margin-right auto
    position relative

fs($min-font, $max-font, $min-width = 320px, $max-width=1100px)
    font-size: $min-font
    @media (min-width: $min-width)
        font-size: s('calc( %s + (%s - %s) * ((100vw - %s) / (%s - %s)) )', $min-font, remove-unit($max-font), remove-unit($min-font), $min-width, remove-unit($max-width), remove-unit($min-width))

    @media (min-width: $max-width)
        font-size: $max-font

font(face = Regular)
    if face == Regular
        font-family "Geometria-Regular", serif
        font-weight 400
        font-style normal
    if face == Medium
        font-family "Geometria-Medium", serif
        font-weight 500
        font-style normal
    if face == Bold
        font-family "Geometria-Bold", serif
        font-weight 700
        font-style normal
    if face == Extra
        font-family "Geometria-ExtraBold", serif
        font-weight 700
        font-style normal
    if face == Heavy
        font-family "Geometria-Heavy", serif
        font-weight 800
        font-style normal

